{
    "env": {
        "browser": true,
        "amd": true,
        "jquery": true,
        "es6": false,
        "node": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 5,
        "ecmaFeatures": {
            "modules": false
        }
    },
    "extends": [
        "eslint-config-eslint",
        "plugin:react/recommended",
        "eslint-config-airbnb"
    ],
    "rules": {
        // es6 rules
        "prefer-arrow-callback": 0,
        "object-shorthand": 0,
        "prefer-template": 0,
        "no-var": 0,

        // Personal rules
        "max-len": [2, 80, 4, {"ignoreUrls": true}],
        "vars-on-top": 0,
        "func-names": 0,
        "padded-blocks": [2, "never"],
        "object-curly-spacing": [2, "never"],
        "strict": [2, "global"],
        "handle-callback-err": 2,
        "no-undef-init": 2,
        "no-mixed-requires": 2,
        "no-path-concat": 2,
        "no-console": 0
    }
}
